    <script>
          function toggleNo() {
            const noButton = document.getElementById("noButton");
            if (noButton.innerText === "No") {
                noButton.innerText = "Sure ho?";
            } else if (noButton.innerText === "Sure ho?") {
                noButton.innerText = "Sachii?";
            } else if (noButton.innerText === "Sachii?") {
                noButton.innerText = "Yes click gara timlai mero kasam";
            } else {
                noButton.innerText = "No"; 
            }
        }
    </script>
